import requests
import time
import RPi.GPIO as GPIO

# Konfigurasi GPIO
TD = 17  # Tape Defect
ES = 27  # Element Stitch
C1 = 22  # Camera 1
C2 = 5   # Camera 2
MT = 6   # Motor running sensor

GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)

# Setup GPIO pins as input with pull-up resistors
GPIO.setup(TD, GPIO.IN, pull_up_down=GPIO.PUD_DOWN)
GPIO.setup(ES, GPIO.IN, pull_up_down=GPIO.PUD_DOWN)
GPIO.setup(C1, GPIO.IN, pull_up_down=GPIO.PUD_DOWN)
GPIO.setup(C2, GPIO.IN, pull_up_down=GPIO.PUD_DOWN)
GPIO.setup(MT, GPIO.IN, pull_up_down=GPIO.PUD_UP)

mesin = 'CH0045'

# URL target
url = "http://10.246.142.20/pdgeneral/kirim_data/sensor_inspection/"

# Function to send data to the database
def send_data(param):
    full_url = f"{url}{mesin}-{param}"
    try:
        response = requests.get(full_url)
        print(f"Sent: {param}")
    except requests.exceptions.RequestException as e:
        print(f"Failed to send data: {e}")

# Variable untuk tracking status terakhir & waktu terakhir pengiriman
last_sent_status = None
last_sent_time = time.time()
last_sent_sensor = None  # Untuk memantau sensor terakhir yang mengirimkan data

# Variabel untuk sensor pertama yang terdeteksi
first_triggered_sensor = None
first_triggered_time = 0
delay_threshold = 7.5  # Ubah menjadi 7.5 detik

try:
    while True:
        # Read the state of sensors
        td_state = GPIO.input(TD)
        es_state = GPIO.input(ES)
        c1_state = GPIO.input(C1)
        c2_state = GPIO.input(C2)
        mt_state = GPIO.input(MT)
        current_time = time.time()

        # Jika motor running, reset first_triggered_sensor
        if mt_state == GPIO.HIGH:
            first_triggered_sensor = None
            first_triggered_time = 0
            last_sent_sensor = "15"
            current_status = "15"
        
        else:
            # Jika belum ada sensor yang terdeteksi, simpan yang pertama
            if first_triggered_sensor is None:
                if es_state == GPIO.HIGH:
                    first_triggered_sensor = "12"  # ES
                    first_triggered_time = current_time
                elif c1_state == GPIO.HIGH:
                    first_triggered_sensor = "13"  # C1
                    first_triggered_time = current_time
                elif c2_state == GPIO.HIGH:
                    first_triggered_sensor = "14"  # C2
                    first_triggered_time = current_time
            
            # Jika mesin tetap mati setelah 7.5 detik, gunakan sensor pertama yang terdeteksi
            if first_triggered_sensor and (current_time - first_triggered_time >= delay_threshold):
                current_status = first_triggered_sensor
                last_sent_sensor = first_triggered_sensor
            elif td_state == GPIO.HIGH:
                current_status = "11"  # TD  
                last_sent_sensor = "11"
            else:
                # Jika tidak ada sensor yang aktif dan sebelumnya dari MT, kirim Not Found
                if last_sent_sensor == "15":
                    current_status = "10"  # Not Found
                    last_sent_sensor = "10"
                else:
                    continue  # Skip pengiriman jika tidak ada perubahan

        # Kirim data setiap 10 detik atau jika status berubah
        if current_status != last_sent_status or (current_time - last_sent_time >= 10):
            send_data(current_status)
            last_sent_status = current_status
            last_sent_time = current_time

        time.sleep(0.02)  # Delay pembacaan sensor (20 ms)

except KeyboardInterrupt:
    print("Program terminated by user.")
finally:
    GPIO.cleanup()
